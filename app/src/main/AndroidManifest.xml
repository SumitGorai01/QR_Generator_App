<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dell.qrgenerator">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="com.android.hardware.Camera.focus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".generateQr" />
        <activity android:name=".scanQr"></activity>
        <activity android:name="com.journeyapps.barcodescanner.CaptureActivity"
           android:screenOrientation="portrait"
           tools:replace="screenOrientation"></activity>
    </application>

</manifest>